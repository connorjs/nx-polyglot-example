{
	"$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
	"implicitDependencies": [
		"hello-cs",
		"hello-js",
		"weather-api",
		"weather-api-spec"
	],
	"name": "root",
	"targets": {
		"build": {
			"dependsOn": ["^build"],
			"executor": "nx:noop"
		},
		"ci-build": {
			"dependsOn": ["build", "format", "lint", "test"],
			"executor": "nx:noop"
		},
		"clean": {
			"dependsOn": ["^clean"],
			"executor": "nx:noop"
		},
		"format": {
			"command": "prettier '*.{cjs,js,json,md}' --list-different",
			"dependsOn": ["^format"]
		},
		"format:fix": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"dotnet csharpier .",
					"prettier '**/*.{cjs,css,cts,graphql,html,js,json,jsonc,jsx,md,pcss,scss,ts,tsp,tsx,yaml,yml}' --write"
				]
			}
		},
		"lint": {
			"command": "eslint -f pretty '*.{cjs,js,json,md}'",
			"dependsOn": ["^lint"]
		},
		"test": {
			"dependsOn": ["^test"]
		}
	}
}
