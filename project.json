{
	"$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
	"name": "root",
	"targets": {
		"ci": {
			"command": "nx run-many --targets build,format,lint,test"
		},
		"clean": {
			"command": "nx run-many --target clean --exclude root"
		},
		"format": {
			"cache": true,
			"command": "prettier '**/*.{cjs,css,cts,graphql,html,js,json,jsonc,jsx,md,pcss,scss,ts,tsp,tsx}' --ignore-path .gitignore --list-different"
		},
		"format:fix": {
			"command": "prettier '**/*.{cjs,css,cts,graphql,html,js,json,jsonc,jsx,md,pcss,scss,ts,tsp,tsx}' --ignore-path .gitignore --write"
		}
	}
}
