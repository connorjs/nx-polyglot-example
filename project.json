{
	"$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
	"name": "root",
	"targets": {
		"ci": {
			"command": "nx run-many --targets build,format,lint,test"
		},
		"format": {
			"cache": true,
			"command": "prettier --list-different '**/*.{cjs,css,cts,graphql,html,js,json,jsonc,jsx,md,pcss,scss,ts,tsx}' --ignore-path .gitignore"
		},
		"format:fix": {
			"command": "prettier --write '**/*.{cjs,css,cts,graphql,html,js,json,jsonc,jsx,md,pcss,scss,ts,tsx}' --ignore-path .gitignore"
		}
	}
}
