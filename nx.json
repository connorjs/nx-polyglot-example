{
	"$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/nx-schema.json",
	"affected": {
		"defaultBase": "main"
	},
	"targetDefaults": {
		"build": {
			"cache": true,
			"dependsOn": ["codegen"]
		},
		"codegen": {
			"cache": true,
			"dependsOn": ["^codegen"]
		},
		"dev": {
			"cache": false,
			"dependsOn": ["codegen"]
		},
		"eslint": {
			"cache": true,
			"dependsOn": ["codegen"],
			"executor": "nx:run-commands",
			"options": {
				"command": "eslint -f pretty .",
				"cwd": "{projectRoot}"
			},
			"outputs": ["{options.outputFile}"]
		},
		"eslint:fix": {
			"cache": true,
			"dependsOn": ["codegen"],
			"executor": "nx:run-commands",
			"options": {
				"command": "eslint -f pretty . --fix",
				"cwd": "{projectRoot}"
			},
			"outputs": ["{options.outputFile}"]
		},
		"format": {
			"cache": true,
			"dependsOn": ["prettier"],
			"executor": "nx:noop"
		},
		"format:fix": {
			"cache": true,
			"dependsOn": ["prettier:fix"],
			"executor": "nx:noop"
		},
		"lint": {
			"cache": true,
			"dependsOn": ["eslint", "tsc"],
			"executor": "nx:noop"
		},
		"lint:fix": {
			"cache": true,
			"dependsOn": ["eslint:fix"]
		},
		"prettier": {
			"cache": true,
			"executor": "nx:run-commands",
			"options": {
				"command": "prettier '**/*.{cjs,css,cts,graphql,html,js,json,jsonc,jsx,md,pcss,scss,ts,tsp,tsx}' --ignore-path .gitignore --list-different",
				"cwd": "{projectRoot}"
			}
		},
		"prettier:fix": {
			"cache": true,
			"executor": "nx:run-commands",
			"options": {
				"command": "prettier '**/*.{cjs,css,cts,graphql,html,js,json,jsonc,jsx,md,pcss,scss,ts,tsp,tsx}' --ignore-path .gitignore --write",
				"cwd": "{projectRoot}"
			}
		},
		"test": {
			"cache": false,
			"dependsOn": ["test:integ", "test:system", "test:unit"]
		},
		"test:integ": {
			"cache": true,
			"dependsOn": ["codegen"]
		},
		"test:unit": {
			"cache": true,
			"dependsOn": ["codegen"]
		},
		"tsc": {
			"cache": true,
			"dependsOn": ["codegen"],
			"executor": "nx:run-commands",
			"options": {
				"command": "tsc",
				"cwd": "{projectRoot}"
			}
		}
	},
	"workspaceLayout": {
		"appsDir": "apps",
		"libsDir": "libs"
	}
}
