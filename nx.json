{
	"$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/nx-schema.json",
	"affected": {
		"defaultBase": "main"
	},
	"targetDefaults": {
		"build": {
			"cache": true,
			"dependsOn": ["dotnet build", "tsp compile"],
			"executor": "nx:noop"
		},
		"clean": {
			"cache": false,
			"executor": "nx:run-commands",
			"options": {
				"command": "shx rm -rf dist/{projectName}"
			}
		},
		"codegen": {
			"cache": true,
			"executor": "nx:noop"
		},
		"csharpier": {
			"cache": true,
			"executor": "nx:run-commands",
			"options": {
				"command": "dotnet csharpier --check .",
				"cwd": "{projectRoot}"
			}
		},
		"csharpier:fix": {
			"cache": false,
			"executor": "nx:run-commands",
			"options": {
				"command": "dotnet csharpier .",
				"cwd": "{projectRoot}"
			}
		},
		"dev": {
			"cache": false,
			"dependsOn": ["dotnet run"],
			"executor": "nx:noop"
		},
		"dotnet build": {
			"cache": true,
			"dependsOn": ["^dotnet build"],
			"executor": "nx:run-commands",
			"inputs": ["{projectRoot}/*.{cs,csproj}", "{projectRoot}/src"],
			"options": {
				"command": "dotnet build --no-dependencies",
				"cwd": "{projectRoot}"
			},
			"outputs": ["{workspaceRoot}/dist/{projectName}"]
		},
		"dotnet clean": {
			"cache": false,
			"executor": "nx:run-commands",
			"options": {
				"command": "dotnet clean --verbosity quiet",
				"cwd": "{projectRoot}"
			}
		},
		"dotnet run": {
			"cache": false,
			"dependsOn": ["codegen"],
			"executor": "nx:run-commands",
			"options": {
				"command": "dotnet run",
				"cwd": "{projectRoot}"
			}
		},
		"eslint": {
			"cache": true,
			"dependsOn": ["codegen"],
			"executor": "nx:run-commands",
			"options": {
				"command": "eslint -f pretty .",
				"cwd": "{projectRoot}"
			},
			"outputs": ["{options.outputFile}"]
		},
		"eslint:fix": {
			"cache": true,
			"dependsOn": ["codegen"],
			"executor": "nx:run-commands",
			"options": {
				"command": "eslint -f pretty . --fix",
				"cwd": "{projectRoot}"
			},
			"outputs": ["{options.outputFile}"]
		},
		"format": {
			"cache": true,
			"dependsOn": ["prettier"],
			"executor": "nx:noop"
		},
		"lint": {
			"cache": true,
			"dependsOn": ["eslint", "tsc"],
			"executor": "nx:noop"
		},
		"lint:fix": {
			"cache": true,
			"dependsOn": ["eslint:fix"]
		},
		"prettier": {
			"cache": true,
			"executor": "nx:run-commands",
			"options": {
				"command": "prettier '**/*.{cjs,css,cts,graphql,html,js,json,jsonc,jsx,md,pcss,scss,ts,tsp,tsx}' --ignore-path .gitignore --list-different",
				"cwd": "{projectRoot}"
			}
		},
		"test": {
			"cache": false,
			"dependsOn": ["test:integ", "test:system", "test:unit"]
		},
		"test:integ": {
			"cache": true,
			"dependsOn": ["codegen"]
		},
		"test:unit": {
			"cache": true,
			"dependsOn": ["codegen"]
		},
		"tsc": {
			"cache": true,
			"dependsOn": ["codegen"],
			"executor": "nx:run-commands",
			"options": {
				"command": "tsc",
				"cwd": "{projectRoot}"
			}
		},
		"tsp compile": {
			"cache": true,
			"executor": "nx:run-commands",
			"inputs": ["{projectRoot}/*.yaml", "{projectRoot}/src"],
			"options": {
				"command": "tsp compile {projectRoot}/src"
			},
			"outputs": ["{workspaceRoot}/dist/{projectName}"]
		}
	},
	"workspaceLayout": {
		"appsDir": "apps",
		"libsDir": "libs"
	}
}
